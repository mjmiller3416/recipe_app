QWidget[type="background"] {
    background-color: {surface};
}

/* Default label styles */
QLabel {
    color: {on_surface};
    font-family: "Segoe UI", "Roboto", "Helvetica Neue", Arial, sans-serif;
    padding: 4px;
}


/* --- Color Role Pairs --- */
/* For each pair, we define the style for a frame with a background color
   and the corresponding label with the correct contrasting text color. */

/* Primary */
QFrame[type="primary"] {
    background-color: {primary};
}
QLabel[type="on_primary"] {
    background-color: "transparent";
    color: red;
    font-weight: bold;
    font-size: 16px;
}

QFrame[type="on_primary"] {
    background-color: {on_primary};
}
QLabel[type="primary"] {
    background-color: "transparent";
    color: {primary};
    font-weight: bold;
    font-size: 16px;
}

QFrame[type="primary_container"] {
    background-color: {primary_container};
