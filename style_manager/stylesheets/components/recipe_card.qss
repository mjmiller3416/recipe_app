/* recipe_card.qss */

#RecipeCard, #EmptyStateFrame, #ErrorStateFrame {
    background-color: transparent;  /* Flat dark background */
    border-radius: 10px; /* Rounded corners */
}

#RecipeCard QLabel {
    color: {TEXT_STRONG};
    font-size: {FONT_SIZE_NORMAL};
    font-family: {FONT_HEADER};
    font-weight: 600;

}

#RecipeCard[layout_size="medium"] [title_text="true"] {
    font-size: {FONT_SIZE_LARGE};
    font-weight: 600;
}

#RecipeCard [label_text="true"] {
    font-family: {FONT_BODY};
    color: {TEXT_DEFAULT};
    font-weight: 400;
}

