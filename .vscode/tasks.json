{
    "version": "2.0.0",
    "tasks": [

        // Task to run the main.py script
        {
            "label": "Run main.py",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "args": ["main.py"],
            "problemMatcher": []
        },

        // Task to run package_automation.py script
        {
            "label": "Run Package Automation",
            "type": "shell",
            "command": "python",
            "args": ["scripts/package_automation.py"],
            "problemMatcher": []
        },

        // Run the test app automation script
        {
            "label": "üõ†Ô∏è Run TestApp Automation",
            "type": "shell",
            "command": "python",
            "args": ["scripts/create_test_app.py"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },

        // Task to run the test environment
        {
            "label": "Run Test Environment",
            "type": "shell",
            "command": "python",
            "args": ["main.py", "--test"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        // Task to run QtDesigner
        {
            "label": "Run QtDesigner",
            "type": "shell",
            "command": "C:/Qt/6.8.2/msvc2022_64/bin/designer.exe",
            "problemMatcher": []
        },

        // Task to run the UI Converter script
        {
            "label": "Convert UI Files",
            "type": "shell",
            "command": "python",
            "args": ["scripts/ui_converter.py"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
    ]
}
